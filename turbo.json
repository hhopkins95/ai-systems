{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "check": {
      "dependsOn": ["^build"]
    },
    "@hhopkins/smart-docs#build": {
      "dependsOn": ["@hhopkins/claude-entity-manager#build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "opencode-claude-adapter#build": {
      "dependsOn": ["@hhopkins/claude-entity-manager#build"],
      "outputs": ["dist/**"]
    },
    "@example/backend#dev": {
      "dependsOn": [
        "@ai-systems/shared-types#dev",
        "@hhopkins/agent-converters#dev",
        "@hhopkins/claude-entity-manager#dev",
        "@ai-systems/opencode-claude-adapter#dev",
        "@hhopkins/agent-runner#dev",
        "@hhopkins/agent-server#dev"
      ],
      "cache": false,
      "persistent": true
    },
    "@example/frontend#dev": {
      "dependsOn": [
        "@ai-systems/shared-types#dev",
        "@hhopkins/agent-client#dev"
      ],
      "cache": false,
      "persistent": true
    }
  }
}
