{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "check": {
      "dependsOn": ["^build"]
    },
    "@hhopkins/smart-docs#build": {
      "dependsOn": ["@hhopkins/claude-entity-manager#build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "opencode-claude-adapter#build": {
      "dependsOn": ["@hhopkins/claude-entity-manager#build"],
      "outputs": ["dist/**"]
    },
    "@example/backend#dev": {
      "dependsOn": ["@hhopkins/agent-runtime#build"],
      "cache": false
    },
    "@example/frontend#dev": {
      "dependsOn": ["@hhopkins/agent-runtime-react#build"],
      "cache": false
    }
  }
}
