{
  "name": "@hhopkins/agent-runner",
  "version": "0.2.0",
  "description": "Execution scripts for running agent queries inside sandboxes",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "runner": "./dist/runner.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./runner": "./dist/runner.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "pnpm run build:types && pnpm run build:bundle",
    "build:types": "tsc",
    "build:bundle": "tsx esbuild.config.ts",
    "dev": "tsc --watch --preserveWatchOutput & tsx esbuild.config.ts --watch",
    "typecheck": "tsc --noEmit",
    "test": "tsx test/run-all.ts",
    "test:claude": "tsx test/test-execute-claude.ts",
    "test:opencode": "tsx test/test-execute-opencode.ts",
    "harness": "tsx src/test-harness/cli.ts"
  },
  "keywords": [
    "agent",
    "execution",
    "sandbox",
    "claude",
    "opencode",
    "runner"
  ],
  "author": "Hunter Hopkins",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hhopkins95/ai-systems.git",
    "directory": "runtime/execution"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@ai-systems/shared-types": "workspace:*",
    "@hhopkins/agent-converters": "workspace:*",
    "@hhopkins/claude-entity-manager": "workspace:*",
    "@ai-systems/opencode-claude-adapter": "workspace:*",
    "@anthropic-ai/claude-agent-sdk": "^0.1.18",
    "@opencode-ai/sdk": "^1.0.126",
    "commander": "^14.0.0",
    "gray-matter": "^4.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2"
  }
}
