  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@ai-systems/shared-types": "workspace:*",
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3",
